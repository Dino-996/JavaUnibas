<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
    
    <logger name="it.unibas.fitness.modello" level="DEBUG"/>
    <logger name="it.unibas.fitness.vista" level="DEBUG"/>
    <logger name="it.unibas.fitness" level="DEBUG"/>

</configuration>